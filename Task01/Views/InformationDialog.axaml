<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Task01.Views.InformationDialog"
        Width="450"
        Height="120"
        Title="InformationDialog">
    <StackPanel Margin="20" Orientation="Vertical" DataContext="{Binding InformationDialog}">
        <TextBlock Name="LabelText" Width="400" TextWrapping="WrapWithOverflow"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Click="Button_OnClick">OK</Button>
        </StackPanel>
    </StackPanel>
</Window>
